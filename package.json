{
  "name": "@workloads/minecraft-bot",
  "version": "0.1.0",
  "description": "A Mineflayer-based Excavation Assistant",
  "keywords": [
    "minecraft-bot",
    "mineflayer",
    "mineflayer-bot",
    "opentelemetry"
  ],
  "homepage": "https://github.com/workloads/minecraft-bot#readme",
  "bugs": {
    "url": "https://github.com/workloads/minecraft-bot/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Kerim Satirli",
    "url": "https://github.com/ksatirli"
  },
  "contributors": [
    {
      "name": "Igor Savin",
      "url": "https://github.com/kibertoad"
    }
  ],
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/workloads/minecraft-bot.git"
  },
  "scripts": {
    "build": "tsc",
    "copy:config": "cpy --rename=.env ./.env.default ./",
    "test": "vitest",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm run copy:config && npm run test:coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint .  --ext .ts --fix",
    "format": "prettier --write .",
    "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
    "start:dev:watch": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
    "start:prod": "tsc && cross-env NODE_ENV=production node dist/src/server.js",
    "spec:generate": "cross-env NODE_ENV=development ts-node -r dotenv/config scripts/generateOpenApi.ts && npm run spec:validate",
    "spec:validate": "cross-env NODE_ENV=development ts-node -r dotenv/config scripts/validateOpenApi.ts"
  },
  "dependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/awilix": "^3.1.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/swagger": "^8.6.0",
    "@lokalise/node-core": "^5.8.1",
    "awilix": "^8.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0",
    "fastify-custom-healthcheck": "^3.1.0",
    "fastify-graceful-shutdown": "^3.4.0",
    "fastify-no-icon": "^6.0.0",
    "fastify-type-provider-zod": "^1.1.9",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "undici": "^5.22.1",
    "undici-retry": "^1.1.1",
    "validation-utils": "^7.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-v8": "^0.32.2",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vitest": "^0.2.6",
    "mockttp": "^3.7.5",
    "oas-validator": "^5.0.8",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.1.3",
    "vitest": "^0.32.2",
    "yaml": "^2.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
